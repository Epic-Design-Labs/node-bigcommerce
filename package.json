{
	"name": "@epicdesignlabs/node-bigcommerce",
	"version": "1.0.1",
	"description": "A revised node module for authentication and use with the BigCommerce API. Currently in active development.",
	"scripts": {
		"autotest": "supervisor -q -n exit -x node_modules/.bin/_mocha --",
		"build": "babel src --out-dir ./ --source-maps",
		"exectests": "nyc ./node_modules/.bin/_mocha",
		"watch": "babel src --out-dir ./ --source-maps --watch",
		"lint:eslint": "yarn eslint '**/*.{js,jsx,ts,tsx}' --quiet --fix --color --ignore-path .gitignore",
		"lint:prettier": "yarn prettier '**/*.{js,jsx,ts,tsx}' --write --ignore-path .gitignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"prepare": "husky install",
		"test": "npm run exectests && npm run lint"
	},
	"homepage": "https://github.com/Epic-Design-Labs/node-bigcommerce",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/node-bigcommerce.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"big",
		"bigcommerce",
		"commerce",
		"node-bigcommerce",
		"node",
		"npm",
		"oauth",
		"oauth2.0"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"contributors": [
		{
			"name": "Guy Romelle Magayano",
			"email": "guy@epicdesignlabs.com",
			"url": "https://guyromellemagayano.dev"
		},
		{
			"name": "Rick Craig"
		}
	],
	"license": "MIT",
	"main": "./lib/bigcommerce",
	"dependencies": {
		"debug": "^4.3.4"
	},
	"devDependencies": {
		"agentkeepalive": "^4.2.1",
		"chai": "^4.3.6",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.12.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"mocha": "^9.2.2",
		"nock": "^13.2.4",
		"nyc": "^15.1.0",
		"prettier": "^2.6.1",
		"sinon": "^13.0.1",
		"supervisor": "^0.12.0"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/node-bigcommerce/issues"
	},
	"directories": {
		"lib": "lib",
		"test": "test"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit": "cz"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx}": [
			"yarn lint"
		]
	}
}
