{
	"name": "@epicdesignlabs/node-bigcommerce",
	"version": "1.0.1",
	"description": "A revised node module for authentication and use with the BigCommerce API. Currently in active development.",
	"scripts": {
		"autotest": "yarn supervisor -q -n exit -x node_modules/.bin/_mocha --",
		"exectests": "yarn nyc ./node_modules/.bin/_mocha",
		"lint:eslint": "yarn eslint '**/*.js' --quiet --fix --color --ignore-path .gitignore",
		"lint:prettier": "yarn prettier '**/*.js' --write --ignore-path .gitignore",
		"lint": "yarn lint:eslint && yarn lint:prettier",
		"prepare": "yarn husky install",
		"test": "yarn exectests && yarn lint",
		"release": "dotenv release-it -VV --"
	},
	"homepage": "https://github.com/Epic-Design-Labs/node-bigcommerce/blob/master/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Epic-Design-Labs/node-bigcommerce.git"
	},
	"keywords": [
		"@epicdesignlabs",
		"api",
		"big",
		"bigcommerce",
		"commerce",
		"node-bigcommerce",
		"node",
		"npm",
		"oauth",
		"oauth2.0"
	],
	"author": {
		"name": "Epic Design Labs",
		"url": "https://epicdesignlabs.com",
		"email": "info@epicdesignlabs.com"
	},
	"contributors": [
		{
			"name": "Guy Romelle Magayano",
			"email": "guy@epicdesignlabs.com",
			"url": "https://guyromellemagayano.dev"
		},
		{
			"name": "Rick Craig",
			"email": "rick@conversio.com",
			"url": "https://conversio.com"
		}
	],
	"license": "MIT",
	"main": "./lib/bigcommerce",
	"dependencies": {
		"debug": "^3.1.0",
		"is-ip": "^3.1.0",
		"jsonwebtoken": "^8.5.1"
	},
	"devDependencies": {
		"@release-it/keep-a-changelog": "^2.5.0",
		"agentkeepalive": "^4.2.1",
		"chai": "^4.3.6",
		"commitizen": "^4.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"dotenv-cli": "^5.1.0",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"mocha": "^10.0.0",
		"nock": "^13.2.4",
		"nyc": "^15.1.0",
		"prettier": "^2.6.2",
		"release-it": "^14.14.2",
		"sinon": "^14.0.0",
		"supervisor": "^0.12.0"
	},
	"bugs": {
		"url": "https://github.com/Epic-Design-Labs/node-bigcommerce/issues"
	},
	"directories": {
		"lib": "lib",
		"test": "test"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged",
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"commit": "cz"
		}
	},
	"lint-staged": {
		"**/*.js": [
			"yarn lint"
		]
	},
	"release-it": {
		"git": {
			"commitMessage": "chore(release): ${release.version} [skip ci]\n\n${release.notes}",
			"requireCleanWorkingDir": true,
			"tagAnnotation": "Release v${version}",
			"tagName": "v${version}"
		},
		"github": {
			"draft": true,
			"release": true,
			"releaseName": "v${version}"
		},
		"npm": {
			"publish": true
		},
		"plugins": {
			"@release-it/keep-a-changelog": {
				"filename": "CHANGELOG.md"
			}
		},
		"hooks": {
			"after:git:release": "if [ \"${isPreRelease}\" != \"true\" ]; then git tag -f latest && git push -f origin latest; fi",
			"after:release": "echo Successfully created a release draft v${version} for ${repo.repository}. Please add release notes when necessary and publish it!",
			"before:init": "yarn test"
		}
	}
}
